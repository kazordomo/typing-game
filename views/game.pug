extends layout

block content

    .fade

    .menu-area
        .menu-wrapper
            //if user.session
            i(class="fa fa-user-circle-o" id="open-user-profile" aria-hidden="true")
            #open-leaderboard(style="display:none")
                i(class="fa fa-list-ol" aria-hidden="true")
            //a.logout(href="logout")
            //    i(class="fa fa-user-times" aria-hidden="true")
    #user-and-stats
        .container.user-and-stats
            .user-and-stats-menu.clearfix
            .profile-section
                .col.col-50.avatar
                .col.col-50.information
                .col.col-100.topFive
            .leaderboard-section
                .col.col-50.topToday
                .col.col-50.topAll


    .container
        #game-area
            .reset
                span#time-counter
                button#refresh
                    i(class="fa fa-refresh" aria-hidden="true")
            form.clearfix
                input#typing-area(type="text" autocomplete="off" autofocus)
            .words-area
                span.word
                span.word
                span.word
                span.word
                span.word
                span.score
                span.score
                span.score

            form#score-form(method="POST" action="/score")
                input#submit-score(type="hidden" value="" name="submitscore")
                button#submit-button(type="submit")

            //div#open-leaderboard
            //    <i class="fa fa-list-ol" aria-hidden="true"></i> Leaderboard
    //.leaderboard-wrapper
    //    span#close-leaderboard <i class="fa fa-times" aria-hidden="true"></i>
    //    .leaderboard
    //        h1 LEADERBOARD
    //
    div.top-today(style="display:none")
        h3.top-today-title Top Today
        - for(i = 0; i < 10; i++)
            div.user-score.top-today-score

    div.top-all(style="display:none")
        h3.top-all-title Top All
        - for(i = 0; i < 10; i++)
            div.user-score.top-all-score